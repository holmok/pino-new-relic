{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src/",
    "types": [
      "node"
    ],
    "outDir": "dist/",
    "baseUrl": ".",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts"
  ]
}